<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AndroidGuideLine" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="alertDialogTheme">@style/DialogFragmentTheme</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
    </style>

    <style name="Theme.AndroidGuideLine" parent="Base.Theme.AndroidGuideLine" />

    <!--  Navigation View Arrow Style  -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#FFFFFF</item>
    </style>


    <!--    Dialog Fragment Style-->
    <style name="DialogFragmentTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:alertDialogStyle">@style/DialogFragmentStyle</item>
        <item name="dialogCornerRadius">@dimen/_8sdp</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!--     ~ ~ ~ > Button Style Layered Large < ~ ~ ~ -->
    <style name="ButtonPrimaryLayeredLarge" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@drawable/selector_button_primary_layered</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:paddingEnd">@dimen/_16sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_h2</item>
    </style>

    <!--    Bottom Sheet Style-->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <!-- Custom activity transition animation. -->
    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_left</item>
    </style>


    <style name="DialogFragmentStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">@drawable/shape_bg_white_cornered_8</item>
    </style>


    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_bottom_sheet_bg_white_cornered_16</item>
    </style>


    <!--     ~ ~ ~ > Text Style Body / Paragraph Medium < ~ ~ ~ -->
    <style name="TextBodyMedium" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
    </style>

    <!--     ~ ~ ~ > EditText Style Number Input < ~ ~ ~ -->
    <style name="EditTextNumberStyle" parent="Widget.AppCompat.EditText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:height">@dimen/_48sdp</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_color_600</item>
        <item name="android:textCursorDrawable">@drawable/cursor_green</item>
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="hintTextColor">@color/text_color_500</item>
        <item name="paddingStart">@dimen/_12sdp</item>
        <item name="paddingEnd">@dimen/_12sdp</item>
    </style>

    <!--     ~ ~ ~ > Text Style OverLine Bold < ~ ~ ~ -->
    <style name="TextOverLineBold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color_600</item>
        <item name="android:textSize">@dimen/text_size_h4</item>
    </style>

    <style name="TextOverLineRegular" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color_600</item>
        <item name="android:textSize">@dimen/text_size_h4</item>
    </style>

    <!--     ~ ~ ~ > Text Style Header SemiBold < ~ ~ ~ -->
    <style name="TextHeaderSemiBold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color_600</item>
        <item name="android:textSize">@dimen/text_size_h1</item>
    </style>

    <style name="LayoutStyle1">
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/_16sdp</item>
    </style>

    <!--     ~ ~ ~ > EditText Style Password Input < ~ ~ ~ -->
    <style name="EditTextPasswordStyle" parent="Widget.AppCompat.EditText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:height">@dimen/_48sdp</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/text_color_600</item>
        <item name="android:textCursorDrawable">@drawable/cursor_green</item>
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="hintTextColor">@color/text_color_500</item>
        <item name="paddingStart">@dimen/_12sdp</item>
        <item name="paddingEnd">@dimen/_12sdp</item>
    </style>

    <!--     ~ ~ ~ > EditText Style Text Input < ~ ~ ~ -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:height">@dimen/_48sdp</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/text_color_600</item>
        <item name="android:textCursorDrawable">@drawable/cursor_green</item>
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="paddingStart">@dimen/_12sdp</item>
        <item name="paddingEnd">@dimen/_12sdp</item>
    </style>

    <!--    Bottom menu text style when active   -->
    <style name="BottomNavigationViewTextStyleBold">
        <item name="android:fontFamily">@font/inter_extrabold</item>
    </style>

    <!--  Bottom menu text style when inactive -->
    <style name="BottomNavigationViewTextStyleNormal">
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="Theme.AndroidGuideLine.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AndroidGuideLine.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AndroidGuideLine.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>